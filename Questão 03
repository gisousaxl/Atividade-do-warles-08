#include <stdio.h>

int main() {
    short anos;
    int valorDep;
    long numConta;

    printf("informe sua idade (short): ");
    scanf("%hd", &anos);

    printf("informe o valor a depositar (int): ");
    scanf("%d", &valorDep);

    printf("informe o numero da conta (long): ");
    scanf("%ld", &numConta);

    printf("Idade: %hd\n", anos);
    printf("Deposito: %d\n", valorDep);
    printf("Conta: %ld\n", numConta);

    return 0;
}
